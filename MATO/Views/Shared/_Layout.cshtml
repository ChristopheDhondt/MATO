<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - MATO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css"/>   
    <link rel="stylesheet" href="~/css/site.css" />   
</head>
<body>
    <div class="container-fluid">
        <div class="page-header">
            <h1>Martial Art Tournament Online <small>a easy use to manage your competitions</small></h1>
        </div>
        <div class="navbar navbar-default">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MATO</a>                
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Configuration<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Federation" asp-action="Index">Federation</a></li>                            
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        
        @RenderBody()   
        <hr />
        <footer>
            <p>&copy; 2017 - MATO</p>
        </footer>
    </div> 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
    <script src="~/js/site.js"></script>
</body>
</html>
