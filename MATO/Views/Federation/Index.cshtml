@{
    ViewBag.Title = "Federation List";
}

<div class="panel panel-default">
    <div class="panel-heading">ViewBag.Title</div>
    <div class="panel-body">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var federation in Model)
                {
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>@federation.getName("fr")</td>
                        <td>
                            <a class="btn btn-primary" role="button" asp-controller="Federation" asp-action="Edit" asp-all-route-data="@federation.id">Edit</a>
                            <a class="btn btn-danger" role="button" asp-controller="Federation" asp-action="Delete" asp-all-route-data="@federation.id">Delete</a>
                        </td>
                    </tr>
                }                
            </tbody>
        </table>
        <div class="row">
            <div class="col-lg-3"><a class="btn btn-primary" role="button" asp-controller="Federation" asp-action="Add">Add</a></div>
        </div>
    </div>
</div>