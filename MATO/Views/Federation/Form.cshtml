@model MATO.Models.Federation

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        <form method="post">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @{ ViewBag.Title = "General"; }
                            <h4>@ViewBag.Title</h4>
                            @if (ViewBag.Message != null)
                            {
                                <div>@ViewBag.Message</div>
                            }
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label asp-for="NameFr"></label>
                                <input asp-for="NameFr" class="form-control" />
                                <span asp-validation-for="NameFr" class="text-muted"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameNl"></label>
                                <input asp-for="NameNl" class="form-control" />
                                <span asp-validation-for="NameNl" class="text-muted"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameDe"></label>
                                <input asp-for="NameDe" class="form-control" />
                                <span asp-validation-for="NameDe" class="text-muted"></span>
                            </div>
                        </div>
                    </div>
                </div>    
                @{ ViewBag.Title = "Official Address"; }
                @Html.EditorFor(Model => Model.OfficialAdress)                
                @{ ViewBag.Title = "Postal Address"; }
                @Html.EditorFor(Model => Model.PostalAdress)
            </div>
            <div class="form-group">
                <a asp-controller="Federation" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
   </div>
</div>

